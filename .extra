# Git credentials
GIT_AUTHOR_NAME="Troy Harvey"
GIT_AUTHOR_EMAIL="troy.harvey@carta.com"

GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

git config --global user.name "$GIT_AUTHOR_NAME"
git config --global user.email "$GIT_AUTHOR_EMAIL"

if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# Google Cloud SDK
source /Users/troyharvey/google-cloud-sdk/completion.bash.inc
source /Users/troyharvey/google-cloud-sdk/path.bash.inc

# Postgres.app
export PATH=$PATH:/Applications/Postgres.app/Contents/Versions/latest/bin

# pyenv
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# direnv
eval "$(direnv hook bash)"

# Go
export GOPATH=/Users/troyharvey/go
export PATH="$PATH:/Users/troyharvey/go/bin/"

# Homebrew
export PATH="/usr/local/sbin:$PATH"

# Use Homebrew installed bash as user shell
export SHELL="/usr/local/bin/bash"

# PHP Composer
export PATH="$PATH:$HOME/.composer/vendor/bin"

# Laravel Spark
export PATH="$PATH:$HOME/.spark"
